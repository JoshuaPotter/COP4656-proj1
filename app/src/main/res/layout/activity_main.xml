<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="75dp"
            app:srcCompat="@drawable/ic_bubble_chart_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textSize="22sp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="125dp" />

    <TextView
        android:id="@+id/loginTitleSample"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Bikini Party"
        android:textAlignment="center"
        android:textSize="25dp"
        android:onClick="snackbarMessage" />

    <TextView
        android:id="@+id/loginMessageSample"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:text="There is a pool party at Dwayne Wade's house..."
        android:textAlignment="center"
        android:textSize="18dp"
        android:onClick="snackbarMessage" />


</LinearLayout>